<%- include ../templ/header %>

<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="row clearfix">
        <div class="col-md-8 column"> 
          <div class='panel panel-default'>
            <div class='panel-heading'>
              <h3 class="panel-title">
                 发表帖子 
              </h3> 
            </div>  
            <div class='panel-body' style="background: "> 
        <form role="form" action='/topic/create' method='post'> 
          <fieldset>
            <span>选择类型：</span>
            <select name="type" id="type-value">
              <option value="">请选择</option>
              <% var typeValue = '';
                if (typeof(topic) !== 'undefined') {
                  typeValue = topic.type;
                } 
                config.topic_types.forEach(function (type,index) {
                  var value = index;
                  var text = type; %>
                  <option value="<%=value%>" <%= typeValue === value ? 'selected': '' %>><%=text%></option> 
              <% }); %>
            </select>
            <span ></span>
            <textarea 
              autofocus 
              class='span9' id='title' 
              name='title' rows='1'
              placeholder="标题字数 10 字以上">
              <%= typeof(topic) !== 'undefined' && topic || '' %></textarea>

 

            <div class='markdown_editor in_editor'>
              <div class='markdown_in_editor'>
                <textarea class='editor' name='t_content' rows='20'
                          placeholder='文章支持 Markdown 语法, 请注意标记代码'
                        ><%= typeof(topic) !== 'undefined' && topic || '' %></textarea>

                <div class='editor_buttons'>
                  <input type="submit" class='span-primary submit_btn' data-loading-text="提交中"
                         value="提交">
                </div>
              </div>

            </div>

          </fieldset>
        </form> 
            </div>
          </div>
        </div>  
    </div>
  </div>
</div>  

