<%- include ../templ/header %>

<div class="container">
	<div class="row clearfix">
		<div class="col-md-12 column">
			<div class="row clearfix">
				<div class="col-md-8 column">
					<div class="panel panel-default"> 
            <div class='panel-body'>
            	<h2><%= book.name %>&nbsp;<small><%= book.subname%></small></h2>
            </div>
            <div class='panel-body'>
            	<form> 
            		<div class="form-group">
							    <label class="col-sm-2 control-label"><img src="/images/book.jpg" style="width: 107px;"></img></label>
							    <div class="col-sm-10">
										<ul class="list-unstyled"> 
			                <li>
			                  作者:<%=book.author%> 
			                </li> 
			                <li>
			                  原作名:<%= book.originname %>
			                </li>   
			                <li> 
			                  译者:<%=book.translator%> 
			                </li> 
			                <li>
			                  出版社:<%= book.publisher %>
			                </li> 
			                <li>
			                  出版时间:<%= book.publishdate %>
			                </li>
			                <li>
			                  ISBN:<%= book.ISBN %>
			                </li>          
			              </ul>
							    </div>
							  </div>
            	</form>  
            </div>  
						<div class="panel-body" >
							<div>
								<h3 class="text-success">简介</h3>
								<%= book.intro %> 								
							</div>
							<div>
								<h3 class="text-success">作者简介</h3>
								<%= book.authorintro %> 								
							</div>
							<div>
								<h3 class="text-success">目录</h3>
								<%= book.catalog %> 								
							</div> 
						</div> 
					</div>
					<div class="panel panel-default">
						<div class="panel-heading">
							<ul class="nav nav-pills">
								<a id="book_topics" name="#book_topics"></a>
								<% config.types.book.forEach(function(type, index){
									var element = '<li>';
									if(home_type == index) element = '<li class="active">';
									element += '<a href="/book/item/'+book.ISBN+'?type='+index+'#book_topics"  >'+type+'</a></li>'; %> 
									<%- element%> 
								<%	});%> 
							</ul>
						</div>
						<div class="panel-body">
							<div class="tab-content"> 
									<%- include ../topic/list %>   
							</div>
						</div> 
					</div>  
				</div>
				<% if(current_user) { %>
				<div class="col-md-4 column">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">
								编辑
							</h3>
						</div>
						<div class="panel-body">
							<a href="/book/edit/<%= book.ISBN%>"><input type="submit" name="change" class="btn btn-primary" value="我要编辑" /></a>
							
						</div> 
					</div> 
				</div> 
				<% } %>
		</div>
	</div>
</div>



<%- include ../templ/footer %>

