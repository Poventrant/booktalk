<form action="/book/add" method="POST" class="form-horizontal" >
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">书名</label>
    <div class="col-sm-8">
      <input class="form-control" id="name" placeholder="书名只应填写正标题，副标题填在下栏">
    </div>
  </div>
  <div class="form-group">
    <label for="subname" class="col-sm-2 control-label">副标题</label>
    <div class="col-sm-8">
      <input class="form-control" id="subname" placeholder="">
    </div>
  </div>
  <div class="form-group">
    <label for="originname" class="col-sm-2 control-label">原作名</label>
    <div class="col-sm-8">
      <input class="form-control" id="originname" placeholder="外文书籍的原书名">
    </div>
  </div>
  <div class="form-group">
    <label for="ISBN" class="col-sm-2 control-label">ISBN</label>
    <div class="col-sm-8">
      <input class="form-control" id="ISBN" placeholder="">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">作者</label>
    <div class="col-sm-8">
      <input class="form-control" placeholder="如 [英] J. K. 罗琳" /> 
    </div>
    <div class="col-sm-2">
      <botton class="btn btn-info"><a href="" ></a>添加</botton>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">译者</label>
    <div class="col-sm-8">
      <input class="form-control" placeholder=" " /> 
    </div>
    <div class="col-sm-2">
      <botton class="btn btn-info"><a href="" ></a>添加</botton>
    </div>
  </div>

  <div class="form-group">
    <label for="publisher" class="col-sm-2 control-label">出版社</label>
    <div class="col-sm-8">
      <input class="form-control" id="publisher" placeholder="">
    </div>
  </div>

  <div class="form-group">
    <label for="publishdate" class="col-sm-2 control-label">出版日期</label>
    <div class="col-sm-8">
      <input class="form-control" id="publishdate" placeholder="">
    </div>
  </div>

  <div class="form-group">
    <label for="intro" class="col-sm-2 control-label">内容介绍</label>
    <div class="col-sm-8">
      <textarea class="form-control" id="intro" placeholder=""></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="authorintro" class="col-sm-2 control-label">作者介绍</label>
    <div class="col-sm-8">
      <textarea class="form-control" id="authorintro" placeholder=""></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="catalog" class="col-sm-2 control-label">目录</label>
    <div class="col-sm-8">
      <textarea class="form-control" id="catalog" placeholder=""></textarea>
    </div>
  </div>

  <div class="form-group"> 
    <div class="col-sm-offset-5 col-sm-10">
      <button type="submit" class="btn btn-lg btn-primary">提交</button>
    </div> 
  </div>

  </fieldset>
</form>