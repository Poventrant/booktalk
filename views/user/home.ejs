<%- include ../templ/header %>

<div class="container">
	<div class="row clearfix">
		<div class="col-md-12 column">
			<div class="row clearfix">
				<div class="col-md-8 column"> 
				  <div class='panel panel-default'>
				    <div class='panel-heading'>
				    	<h4 class="panel-title">
				    		 <span class="glyphicon glyphicon-home"></span> <%= user.name%> 的主页
				    	</h4> 
				    </div>  
				    <div class='panel-body' >
					    <form class="form-horizontal">
							  <div class="form-group">
							    <label class="col-sm-2 control-label"><img src="/images/avatar.jpg"></label>
							    <div class="col-sm-10">
							      <p class="form-control-static lead"><strong><%= user.name %></strong></p>
							    </div>
							  </div> 
							  <% if (user.wechat){ %>
							  <div class="form-group">
							    <label class="col-sm-2 control-label"><i class="fa fa-lg fa-fw fa-wechat"></i></label>
							    <div class="col-sm-10">
							      <p class="form-control-static"><%= user.wechat %> </p>
							    </div>
							  </div>
							  <% } %>
							  <% if (user.QQ){ %>
							  <div class="form-group">
							    <label class="col-sm-2 control-label"><i class="fa fa-lg fa-fw fa-qq"></i></label>
							    <div class="col-sm-10">
							      <p class="form-control-static"><%= user.QQ %> </p>
							    </div>
							  </div>
							  <% } %>
							  <% if (user.email){ %>
							  <div class="form-group">
							    <label class="col-sm-2 control-label"><i class="fa fa-lg fa-fw fa-envelope-square"></i></label>
							    <div class="col-sm-10">
							      <p class="form-control-static"><%= user.email %> </p>
							    </div>
							  </div>
							  <% } %>
							  <% if (user.address){ %>
							  <div class="form-group">
							    <label class="col-sm-2 control-label"><i class="fa fa-lg fa-fw fa-map-marker"></i></label>
							    <div class="col-sm-10">
							      <p class="form-control-static"><%= user.address %> </p>
							    </div>
							  </div>
							  <% } %> 
							  <% if (user.signature){ %>
							  <div class="form-group">
							    <label class="col-sm-2 control-label">个性签名</label>
							    <div class="col-sm-10">
							      <p class="form-control-static"><%= user.signature %> </p>
							    </div>
							  </div>
							  <% } %> 
							  <div class="form-group text-muted">
							    <label class="col-sm-2 control-label">注册时间</label>
							    <div class="col-sm-10">
							      <p class="form-control-static"><%= user.create_ago() %> </p>
							    </div>
							  </div>
							</form>   
				    </div>
				  </div>
				  <div class='panel panel-default' style="display: none">
				    <div class='panel-heading'>
				    	<h4 class="panel-title">
				    		 最近借入的书籍
				    	</h4> 
				    </div>  
				    <div class='panel-body' > 
				    	<p>无</p>
				    </div>
				  </div>		
				  <div class='panel panel-default' >
				    <div class='panel-heading'>
				    	<h4 class="panel-title">
				    		 最近借出的书籍
				    	</h4> 
				    </div>  
				    <div class='panel-body' > 
				    	<p>无</p>
				    </div>
				  </div>	
				  <div class='panel panel-default' >
				    <div class='panel-heading'>
				    	<h4 class="panel-title">
				    		 最近发表的帖子
				    	</h4> 
				    </div>  
				    <div class='panel-body' > 
				    	<p>无帖子</p>
				    </div>
				  </div>				  
				  <div class='panel panel-default' >
				    <div class='panel-heading'>
				    	<h4 class="panel-title">
				    		 最近参与的帖子
				    	</h4> 
				    </div>  
				    <div class='panel-body' > 
				    	<p>无帖子</p>
				    </div>
				  </div>			  	
				</div>  
		</div>
	</div>
</div> 
 
<%- include ../templ/footer %>